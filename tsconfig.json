{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest", "obsidian"],
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": ["src/**/*.ts", "types.d.ts"]
}
